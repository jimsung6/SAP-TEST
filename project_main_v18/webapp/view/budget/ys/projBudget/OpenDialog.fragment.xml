<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" 
   xmlns:l="sap.ui.layout"
   xmlns:u="sap.ui.unified">
  <Dialog
      id="openDialog1"
      contentWidth="70%"
      title="프로젝트 예산 증액 요청">
      <content>
   	<l:VerticalLayout
				width="100%"
				class="gridWrapper">
			<l:Grid
					containerQuery="true"
					defaultSpan="XL10 L10"
               defaultIndent="L1">
            <l:VerticalLayout
                  width="100%"
                  class="gridWrapper">
               <l:Grid
                     class="sapUiSmallMarginTop"
                     containerQuery="true"
                     defaultSpan="XL6 L6">
                           <HBox>
                              <Label text="프로젝트 코드" design="Bold" class="sapUiSmallMarginEnd"/>
                              <Text text="{/projBudgetRequest/PCODE}" width="200px" />
                           </HBox>
               </l:Grid>
               <l:Grid
                     containerQuery="true"
                     defaultSpan="XL6 L6">
                     <HBox>
                        <Label text="프로젝트 이름" design="Bold" class="sapUiSmallMarginEnd"/>
                        <Text text="{/projBudgetRequest/PNAME}"  width="300px"/>
                     </HBox>
                     <HBox>
                        <Label text="프로젝트 매니저" design="Bold" class="sapUiSmallMarginEnd"/>
                        <Text text="{/projBudgetRequest/ENAME}" width="200px"/>
                     </HBox>
               </l:Grid>
                <l:Grid
                     containerQuery="true"
                     defaultSpan="XL6 L6">
                     <HBox>
                        <Label text="프로젝트 기간" design="Bold" class="sapUiSmallMarginEnd"/>
                        <Text text="{/projBudgetRequest/SDATE} ~ {/projBudgetRequest/EDATE}" width="200px"/>	    
                     </HBox>
                     <HBox>
                        <Label text="재무 담당자" design="Bold" class="sapUiSmallMarginEnd"/>
                        <Text text="{/projBudgetRequest/ENAME2}" width="200px"/>
                     </HBox>
               </l:Grid>
                <l:Grid
                     containerQuery="true"
                     defaultSpan="XL6 L6">
                     <HBox>
                        <Label text="남은 예산(KRW)" design="Bold" class="sapUiSmallMarginEnd"/>
                        <u:Currency
                  	   value="{/projBudgetRequest/REMBUD}" maxPrecision="0" useSymbol="false" />
                     </HBox>
                     <HBox>
                        <Label text="총 예산(KRW)" design="Bold" class="sapUiSmallMarginEnd"/>
                        <u:Currency
                  	   value="{/projBudgetRequest/PROBUD}" maxPrecision="0" useSymbol="false" />
                     </HBox>
               </l:Grid>
                <l:Grid
                     containerQuery="true"
                     defaultSpan="XL6 L6">
                     <HBox>
                        <Label text="요청 예산(KRW)" design="Bold" class="sapUiSmallMarginEnd"/>
                        <Input required="true" width="150px" placeholder="숫자만 기입."
                        id="budgetInput"
			                        class="sapUiSmallMarginBottom"
			                        valueStateText="금액을 기입하세요."
			                        value="{
				                              path : '/projBudgetRequest/REBUD',
				                              type : 'sap.ui.model.type.Integer',
				                              constraints : {
                                             maxLength: 10
                                          }
			                              }"
                                        change= ".onChange"/>
                     </HBox>
                     <HBox>
                        <Label text="요청 사유" design="Bold" class="sapUiSmallMarginEnd"/>
                        <Input required="true" width="300px" placeholder="100자 이내로"
                        			id="requestInput"
			                        class="sapUiSmallMarginBottom"
			                        valueStateText="요청 사유를 적으세요. 최대 100자 이내."
			                        value="{
				                              path : '/projBudgetRequest/REQUEST',
				                              type : 'sap.ui.model.type.String',
				                              constraints : {
					                           minLength: 1,
					                           maxLength: 100
				                                             }
			                              }"
			                        change= ".onChange"/>
                     </HBox>
               </l:Grid>
               <l:Grid
                     containerQuery="true"
                     defaultSpan="XL2 L2"
                     defaultIndent="XL9 L9">
                           <CheckBox text="긴급" id="check1" select=".onCheckSelect" ></CheckBox>
               </l:Grid>                             
            </l:VerticalLayout>
          </l:Grid>
   </l:VerticalLayout>  
      </content>
      	<beginButton> 
			<Button
				text="예산 증액 요청"
				press=".onSaveDialog"/>
		</beginButton>
      <endButton>
      			<Button
				text="닫기"
				press=".onCloseDialog"/>
      </endButton>
   </Dialog>
</core:FragmentDefinition>